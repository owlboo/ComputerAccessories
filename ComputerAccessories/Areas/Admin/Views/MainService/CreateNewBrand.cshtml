@using ComputerAccessories.Extensions;

@model ComputerAccessories.Models.Brand
@{
    ViewData["Title"] = "CreateNewBrand";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<br />



<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Thêm danh mục sản phẩm</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" method="post" action="CreateNewBrand">
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Tên Brand</label>
                <input class="form-control" placeholder="Nhập tên Brand" asp-for="BrandName">
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Tạo</button>
        </div>
    </form>
</div>


