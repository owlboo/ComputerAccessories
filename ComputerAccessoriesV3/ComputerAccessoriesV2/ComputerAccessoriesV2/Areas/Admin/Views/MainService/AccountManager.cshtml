<div id="createNewAccount" class="modal fade" role="dialog" style="margin-top: 100px;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color:#6b7f9a">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><b>Tạo mới tài khoản</b></h4>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <p id="txtNotice"></p>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Họ và tên: </label>
                    </div>
                    <div class="col-lg-10">
                        <input class="form-control" id="fullName" placeholder="Vui lòng nhập đầy đủ họ tên" required />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Email đăng nhập: </label>
                    </div>
                    <div class="col-lg-10">
                        <input class="form-control" id="email" type="email" placeholder="Vui lòng nhập Email của bạn" required />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Số điện thoại: </label>
                    </div>
                    <div class="col-lg-10">
                        <input class="form-control" id="phoneNumber" type="tel" placeholder="Vui lòng nhập đầy số điện thoại" required />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Tỉnh, Thành Phố</label>
                    </div>
                    <div class="col-lg-10">
                        <input id="provinceSelector" class="form-control" />
                    </div>
                    @*<select id="provinceSelector" asp-items="@listProvinces.ToSelectListItemProvince("ProvinceName",listProvinces.FirstOrDefault().ProvinceId)" class="form-control"></select>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>*@
                    
                </div>

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Huyện, Quận</label>
                    </div>
                    <div class="col-lg-10">
                        <input id="districtSelector" type="text" class="form-control" />
                    </div>
                    @*<select id="districtSelector" class="form-control"></select>*@
                    
                </div>

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Xã, Phường</label> 
                    </div>
                    <div class="col-lg-10">
                        <input type="text" id="wardSelector" class="form-control" />
                    </div>
                    @*<select id="wardSelector" class="form-control"></select>*@
                    
                </div>

                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Số nhà, Đường</label>
                    </div>
                    <div class="col-lg-10">
                        <input type="text" id="placeDetailText" class="form-control">
                    </div>
                    
                </div>


                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Mật khẩu: </label>
                    </div>
                    <div class="col-lg-10">
                        <input class="form-control" type="password" id="passWord" placeholder="Vui lòng nhập mật khẩu của bạn" pattern=".{6,}" required />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Xác nhận mật khẩu: </label>
                    </div>
                    <div class="col-lg-10">
                        <input class="form-control" id="confirmPassword" type="password" oninput="checkPwd()" placeholder="Xác nhận mật khẩu" required />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>Vai trò</label>
                    </div>
                    <div class="col-lg-10">
                        <select id="roleId" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btn-createAccount"><span><i class="fa fa-check"></i></span> Tạo</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


@section Scripts{


    
    <script src="~/js/SignUp.js" type="text/javascript"></script>

    <script>

        $(document).ready(function () {
            $('#showNotification').hide();
            //setDataToSelector();
            debugger;
            


            var typeAccount = null;

            $("#accountGrid").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: window.location.protocol + '//' + window.location.host + "/MainService/GetAccount?typeAccount=" + typeAccount
                    },
                    pageSize: 20
                },
                height: 550,
                groupable: true,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [{                    
                    field: "displayName",
                    title: "Khách hàng",
                    width: 240
                }, {
                    field: "email",
                    title: "Email"
                },{
                    field: "phoneNumber",
                    title: "Số điện thoại"
                },{
                    field: "roleName",
                    title: "Vai trò"
                },{
                    field: "createdDate",
                    title: "Ngày tạo tài khoản"
                },{
                    field: "isActivated",
                        title: "Trạng thái",
                        template: "#if(isActivated==true){#<text>Đã kích hoạt</text>#}else{#<text>Khóa/Chưa kích hoạt</text>#}#"
                },{
                    field: "address",
                    title: "Địa chỉ"
                    }, {
                        title: "Thao tác",
                        template:"<a class='btn btn-default' style='border:none; background:transparent' onclick='return ViewDetails(#: id #)' title='Xem chi tiết'><span><i class='fa fa-eye'></i></span></a> <a class ='btn btn-default' style='border:none; background:transparent' onclick='return EditAccount(#: id#)' title='Chỉnh sửa'><span><i class='fa fa-pencil'></i></span></a>"
                    }]
            });
        });

        $('#createAccount').click(() => {

            $('#createNewAccount').modal('show');
            $('#provinceSelector').kendoDropDownList({
                optionLabel: '-Chọn tỉnh-',
                dataTextField: "provinceName",
                dataValueField: "provinceId",
                dataSource: {
                    type: 'json',
                    serverFiltering: true,
                    transport: {
                        read: {
                            url: window.location.protocol + '//' + window.location.host+"/MainService/GetProvinces"
                        },
                        requestEnd: function (e) {
                                var response = e.response;
                                var type = e.type;
                                //console.log(type); // displays "read"
                                if (response.length === 0) {
                                    //console.log(response); // displays "read"
                                }
                        },
                    }
                },
                index: 0,
                change: onDataBoundDistricts
            });
            $('#districtSelector').kendoDropDownList({
                optionLabel: '-Chọn quận huyện-',
                dataTextField: "districtName",
                dataValueField: "districtId",
                
                index: 0
            });

            $('#wardSelector').kendoDropDownList({
                optionLabel: '-Chọn quận huyện-',
                dataTextField: "wardName",
                dataValueField: "wardId",
                index: 0
            });

            var listRole = [
                {
                    "id": 1,
                    "name": "Customer",
                    "normalizedName": "CUSTOMER"
                },
                {
                    "id": 2,
                    "name": "SupperAdmin",
                    "normalizedName": "SUPPERADMIN"
                },
                {
                    "id": 3,
                    "name": "Sale",
                    "normalizedName": "SALE"
                },
                {
                    "id": 4,
                    "name": "Shipper",
                    "normalizedName": "SHIPPER"
                }
            ]

            $('#roleId').kendoDropDownList({
                optionLabel: '-Chọn vai trò-',
                dataTextField: "name",
                dataValueField: "id",
                dataSource: listRole,
                index: 0
            });
            
        })

        function onDataBoundDistricts() {
            var provinceId = $('#provinceSelector').data('kendoDropDownList').value();
            $('#districtSelector').kendoDropDownList({
                optionLabel: '-Chọn quận huyện-',
                dataTextField: "districtName",
                dataValueField: "districtId",
                dataSource: {
                    type: 'json',
                    serverFiltering: true,
                    transport: {
                        read: {
                            url: window.location.protocol + '//' + window.location.host + "/MainService/GetDistricts?provinceId=" + provinceId
                        },
                        requestEnd: function (e) {
                                var response = e.response;
                                var type = e.type;
                                //console.log(type); // displays "read"
                                if (response.length === 0) {
                                    //console.log(response); // displays "read"
                                }
                        },
                    }
                },
                index: 0,
                change: onDataBoundWard
            });
        }


        function onDataBoundWard() {
            var provinceId = $('#provinceSelector').data('kendoDropDownList').value();
            var districtId = $('#districtSelector').data('kendoDropDownList').value();
            $('#wardSelector').kendoDropDownList({
                optionLabel: '-Chọn xã,phường-',
                dataTextField: "wardName",
                dataValueField: "wardId",
                dataSource: {
                    type: 'json',
                    serverFiltering: true,
                    transport: {
                        read: {
                            url: window.location.protocol + '//' + window.location.host + "/MainService/GetWards?provinceId=" + provinceId + "&districtId=" + districtId
                        },
                        requestEnd: function (e) {
                                var response = e.response;
                                var type = e.type;
                                //console.log(type); // displays "read"
                                if (response.length === 0) {
                                    //console.log(response); // displays "read"
                                }
                        },
                    }
                },
                index: 0
            });
        }

        $('#btn-createAccount').click(function () {
            var fullname = $('#fullName').val();
            var email = $('#email').val();
            var phone = $('#phoneNumber').val();
            var password = $('#passWord').val();
            var confirm = $('#confirmPassword').val();
            var notify = $('#txtNotice');
            var roleName = $('#roleId').data('kendoDropDownList').text();
            var provinceId = $('#provinceSelector').data('kendoDropDownList').value();
            var districtId = $('#districtSelector').data('kendoDropDownList').value();
            var wardId = $('#wardSelector').data('kendoDropDownList').value();
            var placeDetail = $('#placeDetailText').val();

            if (fullname == "") {
                notify.text('Bạn vui lòng nhập đầy đủ họ tên');
                return;
            }
            if (email == "") {
                notify.text('Bạn vui lòng điền địa chỉ Email');
                return;
            }
            if (districtId == "") {
                notify.text('Bạn vui lòng điền địa chỉ Email');
                return;
            }
            if (provinceId == "") {
                notify.text('Bạn vui lòng chọn tỉnh đang sống');
                return;
            }
            if (wardId == "") {
                notify.text('Bạn vui chọn xã đang sống');
                return;
            }
            if (placeDetail == "") {
                notify.text('Bạn vui lòng điền chi tiết nơi ở');
                return;
            }
            if (districtId == "") {
                notify.text("Bạn vui chọn huyện đang sống");
                return
            }
            if (password == "") {
                notify.text("Bạn vui lòng nhập mật khẩu");
                return;
            }
            if (confirm == "") {
                notify.text("Vui lòng xác nhận mật khẩu");
                return;
            }
            var data = {
                FullName: fullname,
                Email: email,
                PhoneNumber: phone,
                Password: password,
                RoleName: roleName,
                ProvinceId: parseInt(provinceId),
                DistrictId: parseInt(districtId),
                WardId: parseInt(wardId),
                PlaceDetail: placeDetail
            }

            $.ajax({
                url: "/MainService/CreateNewUser",
                type: "post",
                dataType: "json",
                contentType: "application/json",
                data: JSON.stringify(data),
                success: function (result) {
                    console.log(result)
                    if (result.code == 1) {
                        alert("Thêm tài khoản thành công!");
                        $("#accountGrid").data('kendoGrid').dataSource.read();
                        $("#createNewAccount").modal('hide');
                    }
                    if (result.code == 0) {
                        alert("Thêm tài khoản thất bại!");
                    }
                },
                error: function (error) {
                    console.log(error);
                    alert("Thêm tài khoản thất bại!");
                }
            });
        });

        function clearInput() { 
            $('#fullName').value = "";
            $('#email').value = "";
            $('#phoneNumber').value = "";
            $('#passWord').value = "";
            $('#confirmPassword').value = "";
            $('#districtSelector').value = "";
            $('#wardSelector').value = "";
            $('#placeDetailText').value = "";
        }

        function checkPwd() {
            var password = $('#passWord').val();
            var confirm = $('#confirmPassword').val();
            var notify = $('#txtNotice');

            if (confirm != password) {
                notify.text('Mật khẩu không trùng khớp!');
                $('#createAccount').attr('disabled', true);
            } else {
                notify.text("");
                $('#createAccount').attr('disabled', false);
            }
        }
        function show() {
            $('showNotification').fadeTo(2000, 500).slideDown(500, function () {
                $('showNotification').slideUp(500);
            })
        }
    </script>
}