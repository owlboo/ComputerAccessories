@model ComputerAccessoriesV2.ViewModels.AttributeViewModel
@using ComputerAccessoriesV2.Extensions
@using ComputerAccessoriesV2.Models
@{
    ViewData["Title"] = "CreateNewAttribute";
    Layout = "~/Views/Admin/_Layout.cshtml";
    List<Category> categories = new List<Category>();
    categories = ViewBag.lstCategory;
}

<br />
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Chỉnh sửa thuộc tính</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" method="post" action="EditAttributes" id="formEditAttr">
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Tên thuộc tính</label>
                <input oninput="validateInputName()" id="txtAttrName" class="form-control" asp-for="AttributeName">
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <input hidden="hidden" asp-for="Id" />
                <label for="exampleInputEmail1">Danh mục</label>
                <select id="cbCateId" asp-for="CategoryId" asp-items="@categories.ToSelectListItem("CategoryName",categories.FirstOrDefault().Id)" class="form-control"></select>
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" id="btnSubmitEditAttr" oninput="validate()" class="btn btn-primary">Cập nhật</button>
            <a class="btn btn-warning" asp-action="Attributes" asp-controller="MainService">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts{ 
    <script>
        function validateInputName() {
            var name = $("#txtAttrName").val();

            if (name == "") {
                $('#btnSubmitEditAttr').attr("disabled", true);
            } else {
                $('#btnSubmitEditAttr').attr("disabled", false);
            }
        }
    </script>
}




