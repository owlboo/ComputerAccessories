@model List<ComputerAccessoriesV2.Models.Brand>
@{
    ViewData["Title"] = "Branch";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<link rel="stylesheet" href="~/font-awesome/font-awesome/css/font-awesome.css" />

<div class="page-header">
    <div class="row">
        <div class="col-lg-10">
            <h3>Danh mục brand</h3>
        </div>
        <div class="col-lg-1">
            <a class="btn btn-default" asp-area="Admin" asp-controller="Brand" asp-action="CreateNewBrand"><span><i class="fa fa-plus"></i></span> Thêm brand mới</a>
        </div>
    </div>
</div>
<br />

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách thuộc tính</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div id="BrandId">

                </div>
                <table id="example2" class="table table-bordered table-hover">
                    <thead style="color:darkcyan">
                        <tr>
                            <th>Mã</th>
                            <th>Tên brand</th>
                            <th>Active</th>
                            <th>Logo</th>
                            <th>Ngày tạo </th>
                            <th>Ngày chỉnh sửa</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.BrandName</th>
                                @if(item.Status == null)
                                {
                                    <th>N/A</th>
                                }
                                else
                                {
                                    <th>@item.Status</th>
                                }
                                <th>
                                    <img src="@item.Logo" style="width:20%; "/>
                                </th>
                                <th>@item.CreatedDate</th>
                                @if (item.ModifiedDate == null)
                                {
                                    <th></th>
                                }
                                else
                                {
                                    <th>@item.ModifiedDate</th>
                                }
                                <th style="text-align:center;">
                                    <partial name="~/Views/Shared/_TableButtonPartial.cshtml" model="item.Id" />
                                </th>

                            </tr>
                        }
                    </tbody>
                    @*<tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                        </tfoot>*@
                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>

</div>


@section Scripts{ 

<script type="text/javascript">
    $(document).ready(() => {
            $("#BrandId").kendoGrid({
                dataSource: {
                    type: "json",
                    transport: {
                        read: helpers.GetJsonSource("Brand", "GetBrand") // GetJsonSource([controller]/[actionName])
                    },
                    pageSize: 20
                },
                height: 550,
                groupable: true,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [{                    
                    field: "brandName",
                    title: "Tên thương hiệu",
                    width: 240
                },{                    
                    field: "logo",
                        title: "Logo",
                    template:"<img src='#=logo#' style='border-radius:50%; width:20%' alt='#=logo#'>"
                },{
                    field: "status",
                    title: "Trạng thái",
                    template:"#if(data.status == false){#<text>Ẩn</text>#}else{#<text>Hiển thị</text>#}#"
                },{
                    field: "createdDate",
                    title: "Ngày tạo",
                    format: "{0:dd-MM-yyyy}",
                    width: 150
                },{
                    field: "modifiedDate",
                    title: "Cập nhật lần cuối",
                    format: "{0:dd-MM-yyyy}",
                    width: 150
                },{
                        title: "Thao tác",
                    template:"<a class='btn btn-default' onclick='EditBrand(#=data.id#)'  title='Chỉnh sửa'  style='border:none;background:transparent'><span><i class='fa fa-pencil'></i></span></a> <a class='btn btn-default' title='Ẩn' onclick='return Disabled(#=data.id#)' style='border:none;background:transparent'><span><i class='fa fa-remove'></i></span></a>",
                    width: 150
                }]
            });
        })
</script>

}

