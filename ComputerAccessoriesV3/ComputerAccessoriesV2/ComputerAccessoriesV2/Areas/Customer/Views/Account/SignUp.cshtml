@model ComputerAccessoriesV2.ViewModels.RegisterViewModel
@using ComputerAccessoriesV2.Extensions
@using ComputerAccessoriesV2.Models
@{
    List<Provinces> provinces = new List<Provinces>();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Registration Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/iCheck/square/blue.css">
    <link rel="stylesheet" href="~/kendo/styles/kendo.bootstrap-v4.min.css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition register-page" style="overflow-y: hidden">
    <div class="register-box" style="width: 50%; margin: 1% auto">
        <div class="register-logo">
            <a href="../../index2.html" style="font-size: 4rem"><b>ĐĂNG KÝ TÀI KHOẢN</b></a>
        </div>
        <span id="notify"></span>
        <div class="register-box-body">
            <p class="login-box-msg" style="font-size:3rem;">Đăng ký thành viên mới</p>
            <br />
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group has-feedback">
                        <label>Họ và tên</label>
                        <input type="text" id="fullname" asp-for="FullName" class="form-control" required placeholder="Họ và tên">
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group has-feedback">
                        <label>Email</label>
                        <input type="email" id="email" asp-for="Email" class="form-control" required placeholder="Email">
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div>
                        <label>Tỉnh, Thành Phố</label>
                        @*<select id="provinceSelector" asp-for="ProvinceId" asp-items="@provinces.ToSelectListItemProvince("ProvinceName",provinces.FirstOrDefault().ProvinceId)" class="form-control"></select>*@
                        <input id="provinceSelector" class="form-control" />
                        @*<span class="glyphicon glyphicon-envelope form-control-feedback"></span>*@
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div>
                        <label>Huyện, Quận</label>
                        @*<select id="districtSelector" asp-for="DistrictId" class="form-control"></select>*@
                        <input id="districtSelector" class="form-control" />
                        @*<span class="glyphicon glyphicon-envelope form-control-feedback"></span>*@
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div>
                        <label>Xã, Phường</label>
                        @*<select id="wardSelector" asp-for="WardId" class="form-control"></select>*@
                        <input id="wardSelector" class="form-control" />
                        @*<span class="glyphicon glyphicon-envelope form-control-feedback"></span>*@
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group has-feedback">
                        <label>Số điện thoại</label>
                        <input type="tel" class="form-control" id="phonenumber" required placeholder="Nhập số điện thoại tại đây">
                        <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div>
                        <label>Số nhà, Đường</label>
                        <input type="text" id="placeDetailText" class="form-control" placeholder="Nhập số nhà, đường">
                        @*<span class="glyphicon glyphicon-envelope form-control-feedback"></span>*@
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group has-feedback">
                <label>Mật khẩu</label>
                @*<input type="password" class="form-control" id="Pwd" required placeholder="Mật khẩu" pattern=".{8,}">*@
                <input type="password" class="form-control" id="Pwd" required placeholder="Nhập mật khẩu" pattern=".{6,}">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <label>Nhập lại mật khẩu</label>
                <input type="password" class="form-control" id="confirmPwd" oninput="checkPwd()" required placeholder="Nhập lại mật khẩu">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-7 col-md-7">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> I agree to the <a href="#">terms</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-5 col-md-5">
                    <button class="btn btn-primary btn-block btn-flat" style="width: 50%" id="submit">Đăng ký</button>
                </div>
                <!-- /.col -->
            </div>

            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <div style="display: inline-grid;">
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat" style="margin-bottom: 1rem">
                        <i class="fa fa-facebook"></i> Sign up using
                        Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat mb-2" style="margin-bottom: 1rem">
                        <i class="fa fa-google-plus"></i> Sign up using
                        Google+
                    </a>
                    <a asp-controller="Account" asp-action="SignIn" asp-area="Customer" class="text-center" style="font-size: 2rem">Tôi đã có tài khoản</a>
                </div>

            </div>
            <!-- /.form-box -->
        </div>
    </div>
    <!-- /.register-box -->
    <!-- jQuery 3 -->
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <script src="~/kendo/js/kendo.ui.core.min.js"></script>
    <script src="~/kendo/js/kendo.all.min.js"></script>
    <script src="~/js/CustomJS.js" type="text/javascript"></script>
    <script src="~/js/HelperSDK.js" type="text/javascript"></script>

    <script id="successTemplate" type="text/x-kendo-template">
        <div class="new-mail">
            <text style="font-size:14px;">#= title #</text>
            <p style="font-size:12px;">#= message #</p>
        </div>
    </script>

    <script id="errorTemplate" type="text/x-kendo-template">
        <div class="k-notification-error">
            <text style="font-size:14px;">#= title #</text>
            <p style="font-size:12px;">#= message #</p>
        </div>
    </script>

    <script id="warningTemplate" type="text/x-kendo-template">
        <div class="k-notification-warning">
            <text style="font-size:14px;">#= title #</text>
            <p style="font-size:12px;">#= message #</p>
        </div>
    </script>

    <script src="~/js/HelperSDK.js"></script>

    <script>

        $(window).on('load', () => {
            $("#notify").kendoNotification({
                position: {
                    pinned: true,
                    top: 200,
                    right: 50
                },
                autoHideAfter: 5 * 1000,
                stacking: "down",
                templates: [{
                    type: "success",
                    template: $("#successTemplate").html()
                }, {
                    type: "error",
                    template: $("#errorTemplate").html()
                    },
                    {
                    type: "warning",
                    template: $("#warningTemplate").html()
                }
                ]

            })

            $('#provinceSelector').kendoDropDownList({
                optionLabel: '-Chọn tỉnh-',
                dataTextField: "provinceName",
                dataValueField: "provinceId",
                dataSource: {
                    type: 'json',
                    serverFiltering: true,
                    transport: {
                        read: {
                            url: window.location.protocol + '//' + window.location.host + "/Region/GetProvinces"
                        },
                        requestEnd: function (e) {
                            var response = e.response;
                            var type = e.type;
                            //console.log(type); // displays "read"
                            if (response.length === 0) {
                                //console.log(response); // displays "read"
                            }
                        },
                    }
                },
                index: 0,
                change: onDataBoundDistricts
            });
            $('#districtSelector').kendoDropDownList({
                optionLabel: '-Chọn quận huyện-',
                dataTextField: "districtName",
                dataValueField: "districtId",

                index: 0
            });

            $('#wardSelector').kendoDropDownList({
                optionLabel: '-Chọn quận huyện-',
                dataTextField: "wardName",
                dataValueField: "wardId",
                index: 0
            });
        });

        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
    <script>
        function checkPwd() {
            var popupNotification = $('#notify').data('kendoNotification');
            var data = $("#confirmPwd").val();
            var pwd = $('#Pwd').val();
            if (data != pwd) {
                if (data.length == pwd.length) {
                    popupNotification.show({ title: "Thông báo", message: "Mật khẩu không trùng khớp" }, "error");
                }
                $('#submit').attr("disabled", true);
            } else {
                popupNotification.hide(1000);
                $('#submit').attr("disabled", false);
            }
        }

        function onDataBoundDistricts() {
            var provinceId = $('#provinceSelector').data('kendoDropDownList').value();
            $('#districtSelector').kendoDropDownList({
                optionLabel: '-Chọn quận huyện-',
                dataTextField: "districtName",
                dataValueField: "districtId",
                dataSource: {
                    type: 'json',
                    serverFiltering: true,
                    transport: {
                        read: {
                            url: window.location.protocol + '//' + window.location.host + "/Region/GetDistricts?provinceId=" + provinceId
                        },
                        requestEnd: function (e) {
                            var response = e.response;
                            var type = e.type;
                            //console.log(type); // displays "read"
                            if (response.length === 0) {
                                //console.log(response); // displays "read"
                            }
                        },
                    }
                },
                index: 0,
                change: onDataBoundWard
            });
        }

        function onDataBoundWard() {
            var districtId = $('#districtSelector').data('kendoDropDownList').value();
            $('#wardSelector').kendoDropDownList({
                optionLabel: '-Chọn xã,phường-',
                dataTextField: "wardName",
                dataValueField: "wardId",
                dataSource: {
                    type: 'json',
                    serverFiltering: true,
                    transport: {
                        read: {
                            url: window.location.protocol + '//' + window.location.host + "/Region/GetWards?districtId=" + districtId
                        },
                        requestEnd: function (e) {
                            var response = e.response;
                            var type = e.type;
                            //console.log(type); // displays "read"
                            if (response.length === 0) {
                                //console.log(response); // displays "read"
                            }
                        },
                    }
                },
                index: 0
            });
        }
    </script>
    <script src="~/js/AccountValidate.js" type="text/javascript"></script>
    <script src="~/js/SignUp.js" type="text/javascript"></script>
</body>
</html>
